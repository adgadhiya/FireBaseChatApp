<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="#000"
    tools:context="com.example.unknown.findmyinfo.MainActivity">

    <include layout="@layout/toolbar_layout"></include>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_clicked_syllabus"
            android:orientation="vertical"
            android:weightSum="20">


        <ImageButton
            android:id="@+id/btn_syllabus"
            android:layout_weight="19"
            android:src="@mipmap/syllabus"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="100dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="SYLLABUS"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_clicked_papers"
            android:orientation="vertical"
            android:weightSum="20">

            <ImageButton
                android:id="@+id/btn_papers"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@mipmap/papers"
                android:scaleType="centerInside"
                android:background="@null"
                android:layout_weight="19"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PAPERS"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="200"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_clicked_result"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:id="@+id/btn_result"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <ImageView
            android:layout_weight="199"
            android:text="result"
            android:src="@mipmap/result"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="100dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESULT"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#FFFFFF" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_clicked_schedule"
            android:orientation="vertical"
            android:weightSum="20">

            <ImageButton
                android:id="@+id/btn_schedule"
                android:layout_weight="19"
                android:src="@mipmap/schedulw"
                android:scaleType="centerInside"
                android:background="@null"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="100dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="SCHEDULE"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_clicked_holidays"
            android:orientation="vertical"
            android:weightSum="20">

            <ImageButton
                android:id="@+id/btn_holidays"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:src="@mipmap/holidays"
                android:scaleType="centerInside"
                android:background="@null"
                android:layout_weight="19"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HOLIDAYS"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
